<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/md_black_1000_87</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/md_black_1000_87</item>
        <item name="android:textColorSecondary">@color/md_black_1000_38</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="NavigationTabTextAppearance" parent="Widget.Design.TabLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>